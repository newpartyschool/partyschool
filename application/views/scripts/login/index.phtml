    <style type="text/css">
		*{
			margin: 0;padding: 0;border: 0;
		}
		html{
			background-color: rgb(242,242,242);
		}
		a{
			color: #222;
		}	
		.loginbox{
			width: 1024px;
			height: 512px;
			margin-left: -514px;
			margin-top: 60px;
			position:relative;
			left: 50%;
			background:url(../images/bg_login.jpg) no-repeat;
		}
		.loginbox img{
			width: 89px;
			height: 89px;
			margin-top: 13px;
			margin-left: 135px;
		}
		.formbox{
			background-color: white;
			padding-top: 17px;
			padding-left: 20px;
			margin-left: 86px;
			margin-top: 15px;
		}
		.row h1{
			font-family: 'Arial Negreta', 'Arial';
			padding-top: 5px;
			font-weight: bold;
		}
		.row h4{
			font-family: '黑体';
			padding-top: 11px;
			padding-left: 170px;
		}
		.row p{
			padding-top: 17px;
			padding-right:20px;
			padding-left: 20px;
		}
		button{
			margin-left: 70px;
		}
		#login{
			width: 30%;
		}
